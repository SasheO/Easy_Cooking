<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivFoodPic"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ibExitAddFoodItem"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@id/etFoodName"
        android:visibility="visible"
        app:srcCompat="@drawable/vegetables"
        tools:srcCompat="@drawable/vegetables" />

    <EditText
        android:id="@+id/etFoodName"
        android:layout_width="186dp"
        android:layout_height="194dp"
        android:layout_below="@+id/ibExitAddFoodItem"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="59dp"
        android:contentDescription="Food name"
        android:ellipsize="end"
        android:hint="food name"
        android:maxLines="2"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:contentDescription="Amount"
        android:text="Amount"
        android:textSize="30sp"
        android:layout_below="@id/ivFoodPic"
        tools:text="Amount" />

    <Spinner
        android:id="@+id/spinnerFoodMeasure"
        android:layout_width="121dp"
        android:layout_height="53dp"
        android:layout_toEndOf="@id/etFoodQty"
        android:contentDescription="Food measure spinner"
        android:layout_alignTop="@id/etFoodQty"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/etFoodQty"
        android:layout_width="222dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:contentDescription="Number text input for food quantity"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:layout_alignStart="@id/textView3"
        android:layout_below="@id/textView3"/>

    <ImageButton
        android:id="@+id/btnAddFoodItem"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginTop="46dp"
        android:background="@color/white"
        android:contentDescription="Image Button to add food item"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/ibExitAddFoodItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        app:srcCompat="@android:drawable/ic_delete" />
</RelativeLayout>