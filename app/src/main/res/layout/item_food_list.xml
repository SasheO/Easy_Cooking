<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tvFoodItemName"
        android:layout_width="239dp"
        android:layout_height="52dp"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/ivFoodItemPic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Food name" />

    <ImageView
        android:id="@+id/ivFoodItemPic"
        android:layout_width="110dp"
        android:layout_height="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibFoodItemDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vegetables" />

    <TextView
        android:id="@+id/tvFoodItemQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvFoodItemMeasure"
        app:layout_constraintEnd_toStartOf="@+id/tvFoodItemMeasure"
        app:layout_constraintTop_toTopOf="@+id/tvFoodItemMeasure"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Quantity" />

    <TextView
        android:id="@+id/tvFoodItemMeasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/ivFoodItemPic"
        app:layout_constraintTop_toBottomOf="@+id/tvFoodItemName"
        tools:text="Measure" />

    <ImageButton
        android:id="@+id/ibFoodItemCheckBox"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/checkbox_off_background" />

    <ImageButton
        android:id="@+id/ibFoodItemDelete"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibFoodItemCheckBox"
        app:srcCompat="@android:drawable/ic_menu_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>