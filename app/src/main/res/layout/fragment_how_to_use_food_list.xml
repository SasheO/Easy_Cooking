<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_edit_name.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/light_grey"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_your_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Label"
                android:text="How To Use This Page" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To add new item, click the plus button in the corner:" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_input_add"
                app:tint="@color/dark_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To delete item, click the trash item:" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_delete"
                app:tint="@color/dark_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To move item from one list to another, swipe in its direction:" />

            <VideoView
                android:id="@+id/vvSwitchList"
                android:layout_width="175dp"
                android:layout_height="300dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To edit item, simply select it:" />

            <VideoView
                android:id="@+id/vvEditItem"
                android:layout_width="175dp"
                android:layout_height="300dp" />

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>